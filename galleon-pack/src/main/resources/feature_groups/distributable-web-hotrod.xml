<?xml version="1.0" encoding="UTF-8"?>
<feature-group-spec name="distributable-web-hotrod" xmlns="urn:jboss:galleon:feature-group:1.0">
    <feature spec="subsystem.distributable-web">
        <param name="default-session-management" value="default"/>
        <param name="default-single-sign-on-management" value="default"/>
        <feature spec="subsystem.distributable-web.routing.local"/>
        <feature spec="subsystem.distributable-web.hotrod-session-management">
            <param name="hotrod-session-management" value="default"/>
            <param name="remote-cache-container" value="web-hotrod"/>
            <param name="granularity" value="SESSION"/>
            <param name="routing" value="OWNER"/>
        </feature>
        <feature spec="subsystem.distributable-web.hotrod-single-sign-on-management">
            <param name="hotrod-single-sign-on-management" value="default"/>
            <param name="remote-cache-container" value="web-hotrod"/>
        </feature>
    </feature>
</feature-group-spec>
