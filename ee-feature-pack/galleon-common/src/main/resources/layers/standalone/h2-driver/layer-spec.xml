<?xml version="1.0" ?>
<layer-spec xmlns="urn:jboss:galleon:layer-spec:1.0" name="h2-driver">
    <props>
        <prop name="add-on" value="h2-database"/>
        <prop name="inclusion-mode" value="only:datasources"/>
        <prop name="pattern-xml-path" value="/WEB-INF/.*.xml,/datasources/datasource/driver,h2"/>
        <prop name="pattern-xml-path-xa" value="/WEB-INF/.*.xml,/datasources/xa-datasource/driver,h2"/>
    </props>
    <dependencies>
        <layer name="datasources"/>
        <layer name="base-server"/>
    </dependencies>
    <feature-group name="h2-driver"/>
    <packages>
        <package name="com.h2database.h2"/>
    </packages>
</layer-spec>